set number
set ai
set tabstop=4
set shiftwidth=4
set tw=80
set expandtab

set cursorline
set clipboard=unnamedplus

" last time position
if has("autocmd")
  au BufReadPost * if line("'\"") > 0 && line("'\"") <= line("$") | exe "normal! g`\"" | endif
endif

" key mapping
imap jk <ESC>
imap kj <ESC>

" color setting
syntax on
set t_Co=256

" folding
set foldmethod=syntax
set nofoldenable

